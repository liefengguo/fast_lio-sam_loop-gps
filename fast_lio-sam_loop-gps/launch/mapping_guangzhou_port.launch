<launch>
  <arg name="rviz" default="true" />
  <arg name="use_sim_time" default="true" />

  <param name="/use_sim_time" value="$(arg use_sim_time)" />

  <rosparam command="load" file="$(find fast_lio_sam_loop)/config/guangzhou_port.yaml" />

  <param name="feature_extract_enable" type="bool" value="0" />
  <param name="point_filter_num" type="int" value="5" />
  <param name="max_iteration" type="int" value="3" />
  <param name="filter_size_surf" type="double" value="0.5" />
  <param name="filter_size_map" type="double" value="0.5" />
  <param name="cube_side_length" type="double" value="1000" />
  <param name="runtime_pos_log_enable" type="bool" value="1" />

  <node pkg="fast_lio_sam_loop" type="fastlio_mapping" name="laserMapping" output="screen"/>
  <node pkg="fast_lio_sam_loop" type="fast_lio_sam_loop_gpsOdometry" name="fast_lio_sam_loop_gpsOdometry" output="screen"/>

  <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find fast_lio_sam_loop)/rviz_cfg/loam_livox.rviz" />
  </group>
</launch>
